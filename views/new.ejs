<% include partials/header %>


<div class="container">
  <h1 style="text-align: center;">Add a new Sofi Post!</h1>

  <div class="row">
    <div style="width: 30%; margin: 20px auto;">
      <form action="/sofipics" method="POST">
        <div class="form-group">
         <input type="text" class="form-control" id="addName" aria-describedby="emailHelp" placeholder="Name">
        </div>
        <div class="form-group">
         <input type="text" class="form-control" id="addImage" placeholder="Image">
        </div>
       <div class="form-group">
         <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </div>
       <a href="/sofipics">Go back!</a>
      </form>
    </div>
  </div>
</div>

